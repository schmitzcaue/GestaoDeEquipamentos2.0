@using GestaoDeEquipamentos.WebApp.Models
@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Equipamento";
}

@model EditarEquipamentoViewModel;

<div class="row justify-content-center">
    <form class="col-6" action="/Equipamento/Editar/@Model.Id" method="post">
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome</label>
            <input class="form-control" name="Nome" value="@Model.Nome">
        </div>

        <div class="mb-3">
            <label for="PrecoAquisicao" class="form-label">Preço de Aquisição</label>
            <input class="form-control" name="PrecoAquisicao" value="@Model.PrecoAquisicao">
        </div>

        <div class="mb-3">
            <label for="DataFabricacao" class="form-label">Data de Fabricação</label>
            <input class="form-control" type="date" name="DataFabricacao" value="@Model.DataFabricacao.ToString("yyyy-MM-dd")">
        </div>

        <div class="mb-3">
            <label for="FabricanteId" class="form-label">Fabricante</label>
            <select class="form-select" name="FabricanteId">
                @foreach (SelecionarFabricanteViewModel f in Model.FabricantesDisponiveis)
                {
                    <option value="@f.Id">@f.Nome</option>
                }
            </select>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a href="/Equipamento" class="btn btn-outline-primary px-5 ">Voltar</a>
            <button class="btn btn-primary px-5">Gravar</button>
        </div>
    </form>
</div>