@using GestaoDeEquipamentos.Dominio.ModuloFabricante

@model Fabricante;

<html>
<head>
    @* Bootstrap *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <title>Exclusão de Fabricantes | Gestão de Equipamentos</title>
</head>
<body data-bs-theme="dark">
    @* Barra de Navegação / Navbar *@
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Gestão de Equipamentos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Fabricante">Fabricantes</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="btn btn-primary" href="/Equipamento">Equipamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Chamado">Chamados</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @* Cabeçalho com o Título da Página Atual *@
    <header class="container my-4">
        <h1>Exclusão de Fabricantes</h1>
    </header>

    <hr />


    @* Conteúdo Principal da Página *@
    <main class="container my-4">
        <div class="row justify-content-center">
            <form class="col-6" action="/Fabricante/ExcluirConfirmado/@Model.Id" method="post">

                <div class="mb-5">
                    <p>Deseja realmente excluir o registro "@Model.Nome"?</p>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a href="/Fabricante" class="btn btn-outline-danger px-5 ">Voltar</a>
                    <button class="btn btn-danger px-5">Confirmar</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>