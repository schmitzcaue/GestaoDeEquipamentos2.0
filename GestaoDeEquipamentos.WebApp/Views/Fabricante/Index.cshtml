@using GestaoDeEquipamentos.Dominio.ModuloFabricante

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Fabricantes";
}
@model List<Fabricante>
<a class="btn btn-primary" href="/Fabricante/Cadastrar">
    <i class="bi bi-plus"></i>
    Cadastrar novo/a
</a>

<div class="row mt-4">
    @foreach (Fabricante f in Model)
    {
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@f.Nome</h5>
                    <p class="card-text mb-0"><strong>Email:</strong> @f.Email</p>
                    <p class="card-text mb-0"><strong>Telefone:</strong> @f.Telefone</p>
                </div>
                <div class="card-actions ms-auto me-3 mb-3 d-flex gap-1">
                    <a class="btn btn-sm btn-primary rounded-circle d-flex justify-content-center align-items-center" style="height: 35px; width: 35px;" href="/Fabricante/Editar/@f.Id">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-danger rounded-circle d-flex justify-content-center align-items-center" style="height: 35px; width: 35px;" href="/Fabricante/Excluir/@f.Id">
                        <i class="bi bi-trash2"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>