@using GestaoDeEquipamentos.Dominio.ModuloFabricante

@model List<Fabricante>

<html>
<head>
    @* Bootstrap *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    <title>Visualização de Fabricantes | Gestão de Equipamentos</title>
</head>
<body data-bs-theme="dark">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Gestão de Equipamentos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Fabricante">Fabricantes</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="btn btn-primary" href="/Equipamento">Equipamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Chamado">Chamados</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="container my-4">
        <h1>Visualização de Fabricantes</h1>

        <a class="btn btn-primary mt-4" href="/Fabricante/Cadastrar">Cadastrar Novo/a</a>
    </header>

    <hr />

    <main class="container my-4">
        <div class="row">
            @foreach (Fabricante f in Model)
            {
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@f.Nome</h5>
                            <p class="card-text mb-0"><strong>Email:</strong> @f.Email</p>
                            <p class="card-text mb-0"><strong>Telefone:</strong> @f.Telefone</p>
                        </div>

                        <div class="card-actions ms-auto me-3 mb-3">
                            <a class="btn btn-sm btn-primary" href="/Fabricante/Editar/@f.Id">Editar</a>
                            <a class="btn btn-sm btn-danger" href="/Fabricante/Excluir/@f.Id">Excluir</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</body>
</html>