@using GestaoDeEquipamentos.Dominio.ModuloEquipamento
@using GestaoDeEquipamentos.WebApp.Models

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Chamados";
}

@model ExcluirChamadoViewModel;

<div class="row justify-content-center">
    <form class="col-6" action="/Chamado/ExcluirConfirmado/@Model.Id" method="post">

        <div class="mb-5">
            <p>Deseja realmente excluir o registro "@Model.Titulo"?</p>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a href="/Chamado" class="btn btn-outline-danger px-5 ">Voltar</a>
            <button class="btn btn-danger px-5">Confirmar</button>
        </div>
    </form>
</div>