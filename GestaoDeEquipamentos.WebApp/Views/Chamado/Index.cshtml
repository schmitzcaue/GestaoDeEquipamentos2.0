@using GestaoDeEquipamentos.Dominio.ModuloChamado

@model List<Chamado>

<html>
<head>
    @* Bootstrap *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <title>Visualização de Chamados | Gestão de Equipamentos</title>
</head>
<body data-bs-theme="dark">
    @* Barra de Navegação / Navbar *@
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Gestão de Equipamentos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Fabricante">Fabricantes</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="btn btn-primary" href="/Equipamento">Equipamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Chamado">Chamados</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @* Cabeçalho com o Título da Página Atual *@
    <header class="container my-4">
        <h1>Visualização de Chamados</h1>

        <a class="btn btn-primary mt-4" href="/Chamado/Cadastrar">
            <i class="bi bi-plus-circle"></i>
            Cadastrar Novo/a
        </a>
    </header>

    <hr />

    @* Conteúdo Principal da Página *@
    <main class="container my-4">
        <div class="row">
            @foreach (Chamado c in Model)
            {
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@c.Titulo</h5>
                            <p class="card-text mb-0"><strong>Descricao:</strong> @c.Descricao</p>
                            <p class="card-text mb-0"><strong>DataAbertura:</strong> @c.DataAbertura</p>
                            <p class="card-text mb-0"><strong>Equipamento:</strong> @c.Equipamento</p>
                        </div>

                        <div class="card-actions ms-auto me-3 mb-3 d-flex gap-1">
                            <a class="btn btn-sm btn-primary rounded-circle d-flex justify-content-center align-items-center" style="height: 35px; width: 35px;" href="/Chamado/Editar/@c.Id">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-sm btn-danger rounded-circle d-flex justify-content-center align-items-center" style="height: 35px; width: 35px;" href="/Chamado/Excluir/@c.Id">
                                <i class="bi bi-trash2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</body>
</html>