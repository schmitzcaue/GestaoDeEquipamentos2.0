@using GestaoDeEquipamentos.WebApp.Models

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Chamado";
}

@model EditarChamadoViewModel;

<div class="row justify-content-center">
    <form class="col-6" action="/Chamado/Editar/@Model.Id" method="post">
        <div class="mb-3">
            <label for="Titulo" class="form-label">Título</label>
            <input class="form-control" name="Titulo" value="@Model.Titulo">
        </div>

        <div class="mb-3">
            <label for="Descricao" class="form-label">Descrição</label>
            <textarea class="form-control" name="Descricao">@Model.Descricao</textarea>
        </div>

        <div class="mb-3">
            <label for="DataAbertura" class="form-label">Data de Abertura</label>
            <input class="form-control" type="date" name="DataAbertura" value="@Model.DataAbertura.ToString("yyyy-MM-dd")">
        </div>

        <div class="mb-3">
            <label for="EquipamentoId" class="form-label">Equipamento</label>
            <select class="form-select" name="EquipamentoId">
                @foreach (SelecionarEquipamentoViewModel e in Model.EquipamentosDisponiveis)
                {
                    <option value="@e.Id">@e.Nome</option>
                }
            </select>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a href="/Chamado" class="btn btn-outline-primary px-5 ">Voltar</a>
            <button class="btn btn-primary px-5">Gravar</button>
        </div>
    </form>
</div>